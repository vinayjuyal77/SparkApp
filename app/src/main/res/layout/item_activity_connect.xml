<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clParent"
    android:padding="@dimen/_11sdp">

    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_6sdp"
        app:layout_constraintWidth_percent="0.4"
        android:background="@drawable/bg_circle_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgActivity"
            android:scaleType="centerInside"
            android:src="@drawable/ic_activity_help"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesansprosemibold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="DATE"
        app:layout_constraintTop_toBottomOf="@+id/llImage"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp" />
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesansprolight"
        android:gravity="center"
        android:text="Lets make friends!"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp" />
    <TextView
        android:id="@+id/tvConnect"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:fontFamily="@font/sourcesansprosemibold"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="@string/connect"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_button_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/_12ssp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>