<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/bg_white_card"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_16sdp"
                android:text="@string/we_need_info_about_experiences"
                android:textColor="@color/discover_themes_color"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/title"
                android:textColor="@color/dialog_gray_background"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:id="@+id/etTitle"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_edittext_do_you"
                android:fontFamily="@font/sourcesansprosegular"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@color/dialog_gray_background"
                android:textColorHint="@color/gray_text_color"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/place"
                android:textColor="@color/dialog_gray_background"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:id="@+id/etPlace"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_edittext_do_you"
                android:fontFamily="@font/sourcesansprosegular"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@color/dialog_gray_background"
                android:textColorHint="@color/gray_text_color"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/start_date"
                android:textColor="@color/dialog_gray_background"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_weight=".85"
                    android:paddingHorizontal="@dimen/_16sdp"
                    android:background="@color/personal_info_input_bg_color"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:id="@+id/llCalendar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight=".10"
                    android:background="@color/personal_info_input_bg_color"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/end_date"
                android:textColor="@color/dialog_gray_background"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_weight=".85"
                    android:paddingHorizontal="@dimen/_16sdp"
                    android:background="@color/personal_info_input_bg_color"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:id="@+id/llEndCalendar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight=".10"
                    android:background="@color/personal_info_input_bg_color"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add"
                android:paddingHorizontal="@dimen/_30sdp"
                android:textColor="@color/white"
                android:gravity="center"
             android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/bg_button"
                />

        </LinearLayout>
    </LinearLayout>

</layout>