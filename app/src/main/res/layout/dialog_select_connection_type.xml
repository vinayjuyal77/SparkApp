<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/_16sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_card"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/_14sdp"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesansprosegular"
            android:paddingStart="@dimen/_16sdp"
            android:text="@string/post_type"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_16ssp" />

        <LinearLayout
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/rbPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_rb_connection_type"
                android:fontFamily="@font/sourcesansprosegular"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/personal"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/_16ssp"
                android:layout_margin="@dimen/_10sdp"/>

            <CheckBox
                android:id="@+id/rbProfessional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_rb_connection_type"
                android:fontFamily="@font/sourcesansprosegular"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/professional"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/_16ssp"
                android:layout_margin="@dimen/_10sdp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rbPublic"
                android:button="@drawable/custom_rb_connection_type"
                android:fontFamily="@font/sourcesansprosegular"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/public_name"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/_16ssp"
                android:layout_margin="@dimen/_10sdp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

</layout>