<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/bg_white_card"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_12sdp"
                android:text="@string/add_questions_about_something_you_do"
                android:textColor="@color/discover_themes_color"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/question"
                android:textColor="@color/dialog_gray_background"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etQuestion"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_edittext_do_you"
                android:fontFamily="@font/sourcesansprosegular"
                android:gravity="start|center_vertical"
                android:hint="Play Basketball"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@color/dialog_gray_background"
                android:textColorHint="@color/gray_text_color"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/answer"
                android:textColor="@color/dialog_gray_background"
                android:textSize="@dimen/_14ssp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp">

                <RadioButton
                    android:id="@+id/rbYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:paddingStart="@dimen/_5sdp"
                    android:checked="false"
                    android:button="@drawable/selectable_do_you_radio"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/_16ssp" />

                <RadioButton
                    android:id="@+id/rbNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nos"
                    android:paddingStart="@dimen/_5sdp"
                    android:checked="true"
                    android:button="@drawable/selectable_do_you_radio"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/_16ssp" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add"
                android:paddingHorizontal="@dimen/_30sdp"
                android:textColor="@color/white"
                android:gravity="center"
             android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/bg_button"
                />

        </LinearLayout>
    </LinearLayout>

</layout>