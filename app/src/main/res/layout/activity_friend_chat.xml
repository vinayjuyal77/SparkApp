<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activity"
            type="com.app.spark.activity.explore.FriendChatActivity" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_backspace_24"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:onClick="@{(view) -> activity.onBackPressed()}"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/ivMenu"
            android:layout_toEndOf="@+id/ivBack"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sourcesansprobold"
                android:gravity="center"
                android:singleLine="true"
                android:text="Vinay Juyal"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sourcesansprobold"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/_10sdp"
                android:text="Compatible : 77%"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toTopOf="@+id/rlTime"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <include layout="@layout/item_reciver_chat"/>
        <include layout="@layout/item_send_chat"/>
        <include layout="@layout/item_reciver_chat"/>
        <include layout="@layout/item_send_chat"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rlTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/llBottomChat"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_50sdp"
            app:cardElevation="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/tvRevealIdentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_button_white"
                android:fontFamily="@font/sourcesansprosegular"
                android:gravity="center"
                android:ems="8"
                android:visibility="gone"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="@string/reveal_identity"
                android:textColor="@color/red_F94757"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/bg_button_white"
            android:fontFamily="@font/sourcesansprosemibold"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="15:00"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/red_F94757"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llBottomChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_5sdp"
        android:weightSum="2">
        <ImageView
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_baseline_add_24"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="bottom"/>
        <androidx.cardview.widget.CardView
            android:layout_weight="1.50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_gravity="bottom">
            <EditText
                android:id="@+id/etType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_white"
                android:fontFamily="@font/sourcesansprosegular"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:hint="@string/type_a_message"
                android:textColor="@color/black_new"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="bottom"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_comment_send"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>