<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">
            <LinearLayout
                android:id="@+id/llSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center"
                    android:ems="30"
                    android:background="@drawable/ic_bg_curve_down"
                    android:padding="@dimen/_16sdp"
                    android:text="Message"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/green_view_color"/>
                <TextView
                    android:id="@+id/tvRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center"
                    android:ems="25"
                    android:background="#191f27"
                    android:padding="@dimen/_16sdp"
                    android:text="Remove"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/green_view_color"/>
                <TextView
                    android:id="@+id/tvReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center"
                    android:ems="25"
                    android:background="#191f27"
                    android:padding="@dimen/_16sdp"
                    android:text="Report"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/green_view_color"/>
                <TextView
                    android:id="@+id/tvMakeListeners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center"
                    android:ems="25"
                    android:background="@drawable/ic_bg_curve_up"
                    android:padding="@dimen/_16sdp"
                    android:text="Make Listeners"
                    android:visibility="gone"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tvMakeSpeakers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center"
                    android:ems="25"
                    android:visibility="gone"
                    android:background="@drawable/ic_bg_curve_up"
                    android:padding="@dimen/_16sdp"
                    android:text="Make Speakers"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llListener"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvMessageList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center"
                    android:ems="25"
                    android:background="@drawable/ic_bg_curve_down"
                    android:padding="@dimen/_16sdp"
                    android:text="Message"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/green_view_color"/>
                <TextView
                    android:id="@+id/tvReportList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesansprosegular"
                    android:gravity="center"
                    android:ems="25"
                    android:background="@drawable/ic_bg_curve_up"
                    android:padding="@dimen/_16sdp"
                    android:text="Report"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesansprosegular"
                android:gravity="center"
                android:ems="25"
                android:background="@drawable/round_black"
                android:padding="@dimen/_16sdp"
                android:text="Cancel"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>